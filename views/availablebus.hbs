  {{#if bpay }}
  
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
         <div class="modal-dialog">
             <div class="modal-content">
                  
               
                 <div class="modal-body">
                 
               
         
                    
                     
                 <form action="/bpayment" method="post">
          
                     <div class="mb-3">

                    
                     <h4> <img src="https://toppng.com//public/uploads/preview/payment-icon-payment-method-icon-115534531553jugxnc3ex.png" height="50" alt="not found"> <b> &ensp; Payment</b></h4>
                     
                         <hr>
                         <label for="cardNumber" class="form-label"><b>Card Number</b></label>
                         <input type="text"  style="background-color: white;border-color: gray;" class="form-control" id="cardNumber" aria-describedby="emailHelp" name="cardNumber" placeholder="XXXX XXXX XXXX" maxlength="12" required> 
                         <table class="my-2">
                           <tr>
                              <td style="width: 30%;">
                              <label for="cardMonth" class="form-label"><b>Expiration Date</b></label>
                              <input type="number" style="background-color: white;border-color: gray;" class="form-control" id="cardMonth" aria-describedby="emailHelp" name="cardMonth" placeholder="Month" min="01" max="12" required> 
                              </td>
                              <td style="width: 30%;">
                              <label for="cardYear" class="form-label" style="color:white"><b>None</b></label>
                              <input type="number" style="background-color: white;border-color: gray;" class="form-control" id="cardYear" aria-describedby="emailHelp" name="cardYear" placeholder="Year" min="1990" max="2050" required> 
                              </td>
                              <td style="width: 40%;">
                              <label for="cvv" class="form-label"><b>CVV/CVC</b></label>
                              <input type="password" style="background-color: white;border-color: gray;" class="form-control" id="cvv" aria-describedby="emailHelp" name="cvv" value="" placeholder="" maxlength="4" required> 
                              </td>
                               
                           </tr>
                         </table>

                         <label for="cardHolder" class="form-label"><b>Card Holder Name</b></label>
                         <input type="text"  style="background-color: white;border-color: gray;" class="form-control" id="cardNumber" aria-describedby="emailHelp" name="cardHolder" placeholder="Enter card Holder Name"  required>

