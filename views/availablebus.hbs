<body style="background-image: url(https://i.pinimg.com/736x/f1/5e/0f/f15e0fdc3c87c48847f76b02adb9c9a4.jpg); background-repeat: no-repeat;background-attachment: fixed;background-size: 100% 100%">
  {{#if login }}{{> header login='true' username = userName}}{{else}}{{> header}}{{/if}}
 
 
     {{>bus_schedule_form}}
     <div class="my-3">
         <div class="container">
          <h5 class="text-dark">
               <b>There are some Available <i class="bi bi-bus-front-fill"></i> Buses
               <u>
               <a style="color: #000;" target="_blank" href="https://www.google.com/search?q={{from_city}}&rlz= ">{{from_city}}</a>
               </u>&nbsp;to&nbsp;<u><a style="color: #000;" target="_blank" href="https://www.google.com/search?q={{to_city}}&rlz= ">{{to_city}}</a></u></b>
            </h5>
            <h6>Looking for convenient and comfortable travel options from {{from_city}} to {{to_city}}? We've got you covered with a variety of buses at your disposal.</h6>
            <hr>
            <div class="card">
               <div class="card-body">
                <table class="table table-hover">
                     <thead>
                        <tr>
                           <th scope="col"><i class="bi bi-card-heading"></i> Bus Number</th>
                           <th scope="col"><i class="bi bi-bus-front-fill"></i> Company Name</th>
                           <th scope="col"><i class="bi bi-pin-map"></i> Departure Address</th>
                           <th scope="col"><i class="bi bi-calendar"></i> Departure Time</th>
                           <th scope="col"><i class="bi bi-hourglass-split"></i> Duration</th>
                           <th scope="col"><i class="bi bi-cash-coin"></i> Price</th>
                           <th scope="col"><i class="bi bi-asterisk"></i> Bas Capacity</th>
                           <th scope="col">Operation</th>
                        </tr>
                     </thead>
                     <tbody>
                       
                          {{#each obj}}
                            <tr>
                               <form action="/bookbus" method="post">
                               <th scope="row"><input type="text" name="bus_number" style="display:none;" value="{{bus_number}}">{{bus_number}}</th>
                               <td><input type="text" name="company_name" style="display:none;" value="{{company_name}}">{{company_name}}
                              </td>
                               <td><input type="text" name="departure_address" style="display:none;" value="{{departure_address}}">{{departure_address}} </td>
                              <td><input type="text" name="departure_time" style="display:none;" value="{{departure_time}}">{{departure_time}} </td>
                              <td> 
                                 <input type="text" name="duration" style="display:none;" value="{{duration}}"><i class="bi bi-clock"></i> {{duration}} 
                              </td>
                               
                              <td><input type="text" name="price" style="display:none;" value="{{price}}"><i class="bi bi-currency-rupee"></i>{{price}}/-</td>
                               <td> 
                                 <input type="text" name="bas_capacity" style="display:none;" value="{{bas_capacity}}"> {{bas_capacity}} Seats 
                              </td>
                               
                              <td><button type="submit" class="btn btn-success">Book</button></td>
                               </form>
                            </tr>
                     
                      {{/each}}
                      </tbody>
                </table>
                {{#if notAvilible}}
                           <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong>Please provide the correct city's information.</strong>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div> 
                                <table>
                                 <tr>
                                    <th>
                                    <img src="https://img.freepik.com/premium-vector/questioned-thinking-confused-with-question-mark-looking-up-with-thoughtful-focused-expression-concept-illustration_270158-241.jpg" alt="" width="220">

                                    </th>
                                    <th>
                                    <h2><b> Sorry, no buses are available. </b></h2>

                                    </th>
                                 </tr>
                                </table>
                        {{/if}}
            </div></div>
        </div>
    </div>
    
 <br>
  <div>
    <div class="container" style="margin-bottom: 200px;"><hr>
      <h3><b>Download our App on Android or iPhone and get the best bus booking deals across India </b></h3><br>
      
      <table><tr><th><img src="https://www.investopedia.com/thmb/hJrIBjjMBGfx0oa_bHAgZ9AWyn0=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/qr-code-bc94057f452f4806af70fd34540f72ad.png" width="160" alt=""></th><th><h6><img src="https://thumbs.dreamstime.com/b/basic-rgb-179717724.jpg" width="200" alt=""></h6></th><th>Rating <br>
