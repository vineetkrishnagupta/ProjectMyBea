            <hr>
            <div class="card">
               <div class="card-body">
                <table class="table table-hover">
                  <thead>
                        <tr>
                           <th scope="col"><i class="bi bi-card-heading"></i> Train Number</th>
                           <th scope="col"><i class="bi bi-train-front"></i> Train name</th>
                           <th scope="col"><i class="bi bi-pin-map"></i> Origin to Destination </th>
                            
                           <th scope="col"><i class="bi bi-alarm-fill"></i> Departure</th>
                           <th scope="col">
                           <i class="bi bi-hourglass-split"></i> Duration</th>
                           <th scope="col"><i class="bi bi-cloud-sun-fill"></i> ran days</th>
                           <th scope="col"><i class="bi bi-cash-coin"></i> Class</th>
                           <th scope="col">Operation</th>
                        </tr>
                     </thead>
                     <tbody>
                       {{#each obj.data}}
                       <tr>
                        <form action="/train/book" method="post">
                        <td><input type="text" name="train_number" style="display:none;" value="{{train_number}}">{{train_number}}</td>
                        <td><input type="text" name="train_name" style="display:none;" value="{{train_name}}">{{train_name}}</td>
                        <td>{{train_origin_station}}({{train_src}})<i class="bi bi-arrow-left-right"></i> {{train_destination_station}}({{train_src}})</td>
                        <td><input type="text" name="depart_time" style="display:none;" value="{{from_std}}">{{from_std }} </td>
                        <td><input type="text" name="distance" style="display:none;" value="{{local_train_from_sta}}">{{duration}}</td> 
                        <td><select class="form-select" aria-label="Default select example">{{#each run_days}}<option selected>{{this}}</option>{{/each}}</select></td>
                        <td><select class="form-select" aria-label="Default select example">{{#each class_type}}<option selected>{{this}}</option>{{/each}}</select></td>
                        <td><button type="submit" class="btn btn-success">Book</button></td>
                        </form>
                       </tr>

                       {{/each}}
                     </tbody>
                </table>
                </div>
            </div>

